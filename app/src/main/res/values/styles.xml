<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="android:navigationBarColor">@color/primary_blue</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/primary_blue</item>
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:navigationBarColor">@color/primary_blue</item>
    </style>

    <!-- Theme for movie/series detail page without navigation bar -->
    <style name="AppTheme_MovieSeriesDetail" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize for detail page, e.g., status bar color -->
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">56dp</item>
        <item name="itemIconTint">@color/nav_item_colors</item> <!-- İkon renk seçici -->
        <item name="itemTextColor">@color/nav_text_colors</item> <!-- Yazı renk seçici -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/nav_bg</item>
    </style>
    <style name="FontBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.Corner" parent="">
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="RoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Köşe yuvarlaklık değeri -->
    </style>
    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">37.5dp</item>
    </style>
    <style name="CircleShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">70dp</item>
    </style>
</resources>